{% extends 'base.html.twig' %}

{% block body %}
    <h1>Test</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ test.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ test.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ test.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ test.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ test.phone }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ test.password }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ test.role }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if test.createdAt %}{{ test.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updateat</th>
                <td>{% if test.updateAt %}{{ test.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blog_test_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('blog_test_edit', { 'id': test.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
