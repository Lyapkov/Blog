{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tests list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Password</th>
                <th>Role</th>
                <th>Createdat</th>
                <th>Updateat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td><a href="{{ path('blog_test_show', { 'id': test.id }) }}">{{ test.id }}</a></td>
                <td>{{ test.firstName }}</td>
                <td>{{ test.lastName }}</td>
                <td>{{ test.email }}</td>
                <td>{{ test.phone }}</td>
                <td>{{ test.password }}</td>
                <td>{{ test.role }}</td>
                <td>{% if test.createdAt %}{{ test.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if test.updateAt %}{{ test.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('blog_test_show', { 'id': test.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('blog_test_edit', { 'id': test.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blog_test_new') }}">Create a new test</a>
        </li>
    </ul>
{% endblock %}
