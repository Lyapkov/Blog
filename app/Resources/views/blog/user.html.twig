{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table>
        <tbody>
        <tr>
            <th>User Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>First Name</th>
            <td>{{ user.firstName }}</td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>{{ user.lastName }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ user.phone }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th>Role Id</th>
            <td>{{ user.roleId }}</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{ user.createdAt|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Updated At</th>
            <td>{{ user.updatedAt|date('Y-m-d') }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}